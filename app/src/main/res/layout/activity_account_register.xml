<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.account.register.AccountRegisterActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.autoever.apay_user_app.ui.account.register.AccountRegisterViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="5dp"
            android:background="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:subtitleTextColor="@color/black_effective"
                app:title="@string/app_name"
                app:titleTextColor="@color/black_effective">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRootViewParent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/step_01"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bluecircle"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.066666666666667" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layerType="none"
                android:src="@drawable/dashed_line"
                app:layout_constraintBottom_toBottomOf="@id/step_02"
                app:layout_constraintEnd_toStartOf="@+id/step_02"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toEndOf="@id/step_01"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintWidth_percent="1" />

            <TextView
                android:id="@+id/step_02"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bluecircle"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.066666666666667" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layerType="none"
                android:src="@drawable/dashed_line"
                app:layout_constraintBottom_toBottomOf="@id/step_03"
                app:layout_constraintEnd_toStartOf="@+id/step_03"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toEndOf="@id/step_02"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintWidth_percent="1" />

            <TextView
                android:id="@+id/step_03"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bluecircle"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorWhite"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.066666666666667" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layerType="none"
                android:src="@drawable/dashed_line"
                app:layout_constraintBottom_toBottomOf="@id/step_04"
                app:layout_constraintEnd_toStartOf="@+id/step_04"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toEndOf="@id/step_03"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintWidth_percent="1" />

            <TextView
                android:id="@+id/step_04"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bluecircle"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.066666666666667" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layerType="none"
                android:src="@drawable/dashed_line"
                app:layout_constraintBottom_toBottomOf="@id/step_05"
                app:layout_constraintEnd_toStartOf="@+id/step_05"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toEndOf="@id/step_04"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintWidth_percent="1" />

            <TextView
                android:id="@+id/step_05"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_bluecircle"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline4"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.066666666666667" />



            <TextView
                android:id="@+id/step_01_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="약관동의"
                android:textColor="@color/colorblack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.226415094339623"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step_01"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.166666666666667" />

            <TextView
                android:id="@+id/step_02_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="본인인증"
                android:textColor="@color/colorblack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.226415094339623"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/step_02"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.244444444444444" />

            <TextView
                android:id="@+id/step_03_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="은행선택"
                android:textColor="@color/colorblack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.226415094339623"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/step_03"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.166666666666667" />

            <TextView
                android:id="@+id/step_04_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="계좌입력"
                android:textColor="@color/colorblack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.226415094339623"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/step_04"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.166666666666667" />

            <TextView
                android:id="@+id/step_05_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="ARS인증"
                android:textColor="@color/colorblack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.226415094339623"
                app:layout_constraintHorizontal_bias="0.946"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/step_05"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.166666666666667" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRootView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/step_03_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/address_looking_up"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>