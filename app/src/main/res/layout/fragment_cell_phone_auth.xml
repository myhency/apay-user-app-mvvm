<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.autoever.apay_user_app.ui.account.register.auth.CellPhoneAuthViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/join_user_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="42dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="65dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:text="기본정보"
                        android:textColor="#94a0ce"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:hint="이름 입력"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/birthday_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:hint="생년월일 (예: 19900101)"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/birthdayInputWarningMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textColor="@color/warningColor"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/text_id_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:text="휴대폰 인증"
                        android:textColor="#94a0ce"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_id_02"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/phone_spinner"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/spinner_background"
                            android:entries="@array/telecom_arrays"
                            android:fontFamily="@font/spoqa_han_sans_regular"
                            android:prompt="@string/telecom_prompt"
                            android:spinnerMode="dropdown" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/phone_number_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spoqa_han_sans_regular"
                                android:hint="휴대폰 번호 입력"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/phoneNumberInputWarningMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/spoqa_han_sans_regular"
                                android:textColor="@color/warningColor"
                                android:textSize="9sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/auth_number_input"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spoqa_han_sans_regular"
                                android:hint="6자리 인증번호"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/authNumberInputWarningMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/spoqa_han_sans_regular"
                                android:textColor="@color/warningColor"
                                android:textSize="9sp" />
                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/spoqa_han_sans_regular"
                            android:stateListAnimator="@null"
                            android:text="인증확인"
                            android:textColor="#d0d0d0" />

                    </LinearLayout>

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="40dp"-->
<!--                        android:fontFamily="@font/spoqa_han_sans_regular"-->
<!--                        android:text="이메일 (선택)"-->
<!--                        android:textColor="#94a0ce"-->
<!--                        android:textSize="14dp" />-->

<!--                    <EditText-->
<!--                        android:id="@+id/email_input"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:fontFamily="@font/spoqa_han_sans_regular"-->
<!--                        android:hint="이메일 입력"-->
<!--                        android:inputType="textEmailAddress"-->
<!--                        android:padding="10dp"-->
<!--                        android:textColor="#000000"-->
<!--                        android:textSize="18dp" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/emailInputWarningMessage"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:fontFamily="@font/spoqa_han_sans_regular"-->
<!--                        android:textColor="@color/warningColor"-->
<!--                        android:textSize="9sp" />-->

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/complete_auth_button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                android:background="#304db9"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:gravity="center"
                android:text="인증받기"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>